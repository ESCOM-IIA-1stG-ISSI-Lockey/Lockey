header.container.d-flex.flex-wrap.align-items-center.justify-content-between.p-2.mb-0
	include logo
	if user
		.dropdown.dropstart 
			a.d-block.link-dark.text-decoration-none.dropdown-toggle(href='#' data-bs-toggle='dropdown' aria-expanded='false')
				img.rounded-circle.m-0.p-0(src='https://dreamvilla.life/wp-content/uploads/2017/07/dummy-profile-pic.png' alt='usuario' width='32' height='32')
			ul.dropdown-menu.text-small.shadow(style='')
				li
					a.dropdown-item(href='/panel') Panel
				li
					hr.dropdown-divider
				li
					a.dropdown-item(href='/crear-envio') Nuevo envío
				li
					a.dropdown-item(href='/panel/historial') Mis envíos
				li
					a.dropdown-item(href='/panel/perfil') Perfíl
				li
					hr.dropdown-divider
				li
					a.dropdown-item(href='/salir') Cerrar sesión
	else if path != '/'
		.text-end
			button.btn.btn-secondary.me-2(type='button' data-bs-toggle='modal' data-bs-target='#signupModal') Crear Cuenta
			button.btn.btn-primary(type='button' data-bs-toggle='modal' data-bs-target='#signinModal') Ingresar
//- User not defined with pug
if !user && path != '/'
	include /modal/signin
	include /modal/signup
	include /modal/email-verification
	include /modal/password-reset
	script(src='/javascripts/validation.js')