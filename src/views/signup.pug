extends layout_sign

block sign_block
	main.d-flex.align-items-center.p-5.justify-content-center
		div
			.row.pb-5.justify-content-center
				img(src="/images/sendiit.png")
			.row.pb-5
				section#Registro.mb-5.mt-5.p-5
					form#formulario.row.g-3(action="/registro" method="POST")
						div.form-floating.mb-3#grupo__nombre
							input.form-control(type="text" id="nombre" name="nombre"  placeholder="name@example.com")
							label(for="floatingInput") Nombre completo
							div.valid-feedback Todo bien!
							div.invalid-feedback Error
						div.form-floating.mb-3#grupo__telefono
							input.form-control(type="tel" id="telefono" placeholder="name@example.com")
							label(for="floatingInput") Numero de celular
							div.valid-feedback Todo bien!
							div.invalid-feedback Error
						div.form-floating.mb-3#grupo__correo
							input.form-control(type="textd" id="correo" placeholder="name@example.com")
							label(for="floatingInput") Correo electronico
							div.valid-feedback Todo bien!
							div.invalid-feedback Error
						div.form-floating.mb-3#grupo__password
							input.form-control(type="password" id="password" placeholder="Password")
							label(for="floatingPassword") Contraseña
							div.invalid-feedback Error
						div.form-floating.mb-5#grupo__password2
							input.form-control(type="password" id="password2" placeholder="Password")
							label(for="floatingPassword") Confirmar contraseña
							div.valid-feedback Todo bien!
							div.invalid-feedback Error
						button(class="btn btn-primary" Type="submit") CREAR CUENTA


										


											

											

										

							