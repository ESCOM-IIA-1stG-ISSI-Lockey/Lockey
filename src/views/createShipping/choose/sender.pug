extends /layout

block content
    form
        .container.row.col-fluid-12.mt-3.mx-auto
            .col-lg-6.col-md-6.mt-3
                h1.fw-bold.mt-5 Datos del remitente
                p.m-0 Selecciona o agregue un remitente
                input#sender.btn-check(type='radio' name='options2.1' autocomplete='off')
                if typeof(contacts)=='undefined'
                    label.btn.btn-secondary.place.d-flex.flex-column.align-items-center.justify-content-center(for='contacts')
                        i.h1.bi.bi-building-fill
                        p Sin lugar seleccionado
                else
                    label.btn.btn-secondary.place.d-flex.flex-column.align-items-center.justify-content-center.bg-primary(for='contacts')
                        p.fw-bold #{contacts.id_usr} 
                        //--p #{datosOrigin.dir_lkr} 
                
            .container-fluid
                .d-grid.row.col-xl-
                    button.collapsed(type='button' style='background-color: #F9D950;' href='/crear-envio/remitente/addSender')
                        .col-12.rounded-4.d-flex.fs-3.justify-content-start
                            .row.align-items-center.col-4
                                svg.bi.bi-plus-circle(xmlns='http://www.w3.org/2000/svg' width='33' height='33' fill='currentColor' viewbox='0 0 16 16')
                                    path(d='M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z')
                                    path(d='M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z')
                            p.fw-bold.pt-3(color='black' href='/crear-envio/remitente/addSender') Agregar Remitente
                p.fw-bold-pt-3(color='black')
                button.btn.btn-primary(type='button' data-bs-toggle='modal' data-bs-target='#exampleModal' style='background-color: #212E46;')
                        .modal-dialog.modal-dialog-centered.modal-dialog-scrollable.fw-bold.px-4(style='color: #ffffff;') Tus contactos
                        // Modal
                .col-fluid.mt-1.mx-1
                    #exampleModal.modal.fade(tabindex='-1' aria-labelledby='exampleModalLabel' aria-hidden='true')
                        .modal-dialog.modal-dialog-scrollable
                            .modal-content
                                .modal-header
                                    h1#exampleModalLabel.modal-title.fs-5 Contactos
                                    button.btn-close(type='button' data-bs-dismiss='modal' aria-label='Close')
                                .modal-body
                                    p=!{contacts}
                                    form(action='/panel/envio/crearEnvio' method='Post')
                                        each contact in contacts
                                            a.text-decoration-none(href='/panel/envio/crearEnvio/'+contact.id_cont style="color: black" method='Post')
                                                h6.col-12.bg-secondary.p-2.rounded-4.fw-bold(style='--bs-bg-opacity: 0.3')= contact.nm_cont
                                                    p.my-0.px-4.fw-normal=contact.em_cont
                                                    p.my-0.px-4.fw-normal=contact.tel_cont
        
            .col-lg-6.col-md-6.mt-3
                h1.fw-bold.mt-5 Datos del Destinatario
                p.m-0 Selecciona o agregue un destinatario
                input#sender.btn-check(type='radio' name='options2' autocomplete='off')
                if typeof(contacts)=='undefined'
                    label.btn.btn-secondary.place.d-flex.flex-column.align-items-center.justify-content-center(for='contacts')
                        i.h1.bi.bi-building-fill
                        p Sin lugar seleccionado
                else
                    label.btn.btn-secondary.place.d-flex.flex-column.align-items-center.justify-content-center.bg-primary(for='contacts')
                        p.fw-bold #{contacts.id_usr} 
                        //--p #{datosOrigin.dir_lkr} 
                
            .container-fluid
                .d-grid.row.col-xl-
                    button.collapsed(type='button' style='background-color: #F9D950;' href='/crear-envio/remitente/addSender')
                        .col-12.rounded-4.d-flex.fs-3.justify-content-start
                            .row.align-items-center.col-4
                                svg.bi.bi-plus-circle(xmlns='http://www.w3.org/2000/svg' width='33' height='33' fill='currentColor' viewbox='0 0 16 16')
                                    path(d='M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z')
                                    path(d='M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z')
                            a.fw-bold.pt-3(color='black' href='/crear-envio/remitente/addSender') Agregar Destinatario
                p.fw-bold-pt-3(color='black')
                button.btn.btn-primary(type='button' data-bs-toggle='modal' data-bs-target='#exampleModal' style='background-color: #212E46;')
                        .modal-dialog.modal-dialog-centered.modal-dialog-scrollable.fw-bold.px-4(style='color: #ffffff;') Tus contactos
                        // Modal
                .col-fluid.mt-1.mx-1
                    #exampleModal.modal.fade(tabindex='-1' aria-labelledby='exampleModalLabel' aria-hidden='true')
                        .modal-dialog.modal-dialog-scrollable
                            .modal-content
                                .modal-header
                                    h1#exampleModalLabel.modal-title.fs-5 Contactos
                                    button.btn-close(type='button' data-bs-dismiss='modal' aria-label='Close')
                                .modal-body
                                    p=!{contacts}
                                    form(action='/panel/envio/crearEnvio' method='Post')
                                        each contact in contacts
                                            a.text-decoration-none(href='/panel/envio/crearEnvio/'+contact.id_cont style="color: black" method='Post')
                                                h6.col-12.bg-secondary.p-2.rounded-4.fw-bold(style='--bs-bg-opacity: 0.3')= contact.nm_cont
                                                    p.my-0.px-4.fw-normal=contact.em_cont
                                                    p.my-0.px-4.fw-normal=contact.tel_cont

        .d-grid.gap-4
            .row.col-fluid.mt-1.mx-1
                button.btn.btn-primary.btn-lg.rounded-5.mt-3(type='submit' style='background-color: #F9D950;' data-bs-toggle='modal')
                    a.fw-bold(style='color:#212E46' href='/crear-envio/remitente/payment') Continuar
