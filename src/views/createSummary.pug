extends layout

block content
    form
        .container.row.col-fluid-12.mt-3.mx-auto
            .col-lg-6.col-md-6.mt-3
                h1.fw-bold Lugar de origen
                p.m-0 Selecciona o elige un lugar de origen
                input#origen.btn-check(type='radio' name='options2' autocomplete='off' readonly)
                if typeof(origin)=='undefined'
                    label.btn.btn-secondary.place.d-flex.flex-column.align-items-center.justify-content-center(for='origen')
                        i.h1.bi.bi-building-fill
                        p Sin lugar seleccionado
                else
                    label.btn.btn-secondary.place.d-flex.flex-column.align-items-center.justify-content-center.bg-primary(for='origen')
                        p.fw-bold #{origin.nm_lkr} 
                        p #{origin.dir_lkr} 
                a.text-decoration-none(href='/panel/crear-envio/origen')
                    .row.d-flex.align-items-center.justify-content-center.btn.btn-secondary.p-3.ms-3.me-3.shadow.rounded-pill
                        h5.fw-bold.text-white.m-0.p-0 CAMBIAR ORIGEN
            
            .col-lg-6.col-md-6.mt-3
                h1.fw-bold Lugar de destino
                p.m-0 Selecciona o elige un lugar de destino
                input#destino.btn-check(type='radio' name='options3' autocomplete='off' readonly)
                if typeof(destination)=='undefined'
                    label.btn.btn-secondary.place.d-flex.flex-column.align-items-center.justify-content-center(for='destino')
                        i.h1.bi.bi-building-fill
                        p Sin lugar seleccionado
                else
                    label.btn.btn-secondary.place.d-flex.flex-column.align-items-center.justify-content-center.bg-primary(for='destino')
                        p.fw-bold #{destination.nm_lkr} 
                        p #{destination.dir_lkr} 

                a.text-decoration-none(href='/panel/crear-envio/destino')
                    .row.d-flex.align-items-center.justify-content-center.btn.btn-secondary.p-3.ms-3.me-3.shadow.rounded-pill
                        h5.fw-bold.text-white.m-0.p-0 CAMBIAR DESTINO
    .container.row.col-fluid-12.mt-3.mx-auto
        h1.fw-bold.mt-5 Tamaño del paquete
        p.m-0 Selecciona un tamaño de locker
        form 
            .wrapper.Paquetes.p-0
                input#option1.btn-check(type='radio' name='options1' autocomplete='off')
                label.btn.btn-secondary.d-flex.flex-column.align-items-center.justify-content-center(class='TamañoPaquete' for='option1')
                    h3.fw-bold Chico
                    img.boxSize(src="/images/package-s.svg")
                    p.fw-bold.pt-4 Medidas máximas
                    .row
                        .col
                            p.m-0.p-0.fw-bold1 Altura
                            p.m-0.p-0 10 cm
                        .col
                            p.m-0.p-0.fw-bold1 Anchura
                            p.m-0.p-0 40 cm
                        .col
                            p.m-0.p-0.fw-bold1 Profundidad
                            p.m-0.p-0 60 cm
                        //- .col
                        //-     p.m-0.p-0 Peso
                        //-     p.m-0.p-0 15 kg
                input#option2.btn-check(type='radio' name='options1' autocomplete='off')
                label.btn.btn-secondary.d-flex.flex-column.align-items-center.justify-content-center(class='TamañoPaquete' for='option2') 
                    h3.fw-bold Mediano 
                    img.boxSize(src="/images/package-m.svg")
                    p.fw-bold.pt-4 Medidas máximas
                    .row
                        .col
                            p.m-0.p-0.fw-bold1 Altura
                            p.m-0.p-0 20 cm
                        .col
                            p.m-0.p-0.fw-bold1 Anchura
                            p.m-0.p-0 40 cm
                        .col
                            p.m-0.p-0.fw-bold1 Profundidad
                            p.m-0.p-0 60 cm
                        //- .col
                        //-     p.m-0.p-0 Peso
                        //-     p.m-0.p-0 15 kg
                input#option3.btn-check(type='radio' name='options1' autocomplete='off')
                label.btn.btn-secondary.d-flex.flex-column.align-items-center.justify-content-center(class='TamañoPaquete' for='option3') 
                    h3.fw-bold Grande 
                    img.boxSize(src="/images/package-l.svg")
                    p.fw-bold.pt-4 Medidas máximas
                    .row
                        .col
                            p.m-0.p-0.fw-bold1 Altura
                            p.m-0.p-0 50 cm
                        .col
                            p.m-0.p-0.fw-bold1 Anchura
                            p.m-0.p-0 40 cm
                        .col
                            p.m-0.p-0.fw-bold1 Profundidad
                            p.m-0.p-0 60 cm
                    //- .col
                    //-     p.m-0.p-0 Peso
                    //-     p.m-0.p-0 15 kg  

            .row
                .col-6
                    a.text-decoration-none(href='/panel')
                        .row.d-flex.align-items-center.justify-content-center.btn.btn-warning.p-3.ms-0.me-0.shadow.rounded-pill.m-5.mt-4
                            h5.fw-bold.text-white.m-0.p-0 CANCELAR
                .col-6
                    a.text-decoration-none(href='/panel/envio/crearEnvio/sender')
                        .row.d-flex.align-items-center.justify-content-center.btn.btn-secondary.p-3.ms-3.me-3.shadow.rounded-pill.m-5.mt-4
                            h5.fw-bold.text-white.m-0.p-0 CONTINUAR


